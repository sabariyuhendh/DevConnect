{
  "name": "devconnect",
  "version": "1.0.0",
  "private": true,
  "description": "DevConnect - A developer networking platform",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "check": "npm run check:frontend && npm run check:backend",
    "check:frontend": "cd frontend && npm run check",
    "check:backend": "cd backend && npm run check",
    "check:watch": "concurrently \"npm run check:frontend:watch\" \"npm run check:backend:watch\"",
    "check:frontend:watch": "cd frontend && npm run check:watch",
    "check:backend:watch": "cd backend && npm run check:watch"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

